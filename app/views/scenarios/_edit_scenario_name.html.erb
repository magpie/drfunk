<%= form_for(@scenario, :remote => true) do |f| %>
<%= f.text_field :name, :value => @scenario.name %>
<%= submit_tag 'Rename this scenario'%> or 
<%= link_to('Cancel',
                   :url => scenario_path(@scenario),
                   :method => :get,
                   :remote => true) %>
<% end %>
