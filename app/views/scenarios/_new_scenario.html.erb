<% remote_form_for([@plan, Scenario.new], 
     :html => { :id => "new_scenario_#{@feature.id}"}) do |f| %>
    <%= f.hidden_field :feature_id, 
          {:value => @feature.id, :id => "scenario_feature_id_#{@feature.id}"}%>
    <%= f.text_field :name, 
          :class => "text-field",
          :id => "scenario_name_#{@feature.id}" %>
    <br/>
    <%= submit_tag 'Add this scenario', :class => "button", :style => "margin-left:4px;" %>
    or 
<%= 
    link_to_function('Close', :style => "font-size:85%; margin: 4px;") do |page|
      page["new_scenario_feature_#{@feature.id}"].visual_effect :slide_up, :duration => 0.25
      page["add_scenario_feature_#{@feature.id}"].visual_effect :appear
    end 
%>
<% end %>
