<%= form_for([@plan, Scenario.new], 
     :remote => true,
     :html => { :id => "new_scenario_#{@feature.id}"}) do |f| %>
    <%= f.hidden_field :feature_id, 
          {:value => @feature.id, :id => "scenario_feature_id_#{@feature.id}"}%>
    <%= f.text_field :name, 
          :class => "text-field",
          :id => "scenario_name_#{@feature.id}" %>
    <br/>
    <%= submit_tag 'Add this scenario', :class => "button" %>
    or 
<a href="#" onclick="closeNewScenario<%=@feature.id%>(); return false;">Close</a>
<script type="text/javascript">
  function closeNewScenario<%=@feature.id%>() {
    $("#new_scenario_feature_<%=@feature.id%>").slideUp(250);
    $("#add_scenario_feature_<%=@feature.id%>").show();
  }
</script>
<% end %>
