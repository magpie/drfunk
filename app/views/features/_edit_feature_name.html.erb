<%= form_for(@feature, :remote => true) do |f| %>
<%= f.text_field :name, 
      :value => @feature.name, 
      :id => "feature_name_#{@feature.id}" %>
<%= submit_tag 'Rename this feature'%> or
<%= link_to('Cancel',
                   :url => feature_path(@feature),
                   :method => :get,
                   :remote => true) %>
<% end %>
