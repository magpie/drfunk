<%= form_for(@step, :remote => true) do |f| %>
      <span class="step-number">
          <%= @step.position%>.
      </span>
      <%= f.text_area :description, 
          {:id => "edit_step_description_#{@step.id}",
           :value => @step.description} %>
      <span style="width:20px"></span>
      <%= f.text_area :expected, 
          {:id => "edit_step_expected_#{@step.id}",
           :value => @step.expected} %>
      <br/>
      <span class="step-number"></span>
      <%= submit_tag 'Save step', :class => "button" %> or
      <%= link_to('Cancel',
            step_path(@step),
            :method => :get,
            :remote => true) %>
<% end %>
